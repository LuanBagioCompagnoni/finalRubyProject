<head>
    <%= stylesheet_link_tag 'general', media: 'all' %>
</head>

<p id="notice"><%= notice %></p>

<h1>Show Agency</h1>

<%= form_for @agency, html: { class: "mb-3" } do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', value: @agency.name, readonly: true %>
  </div>
<% end %>

<div class="buttons">
    <%= link_to edit_agency_path(@agency), class: 'btn btn-primary fatherButton' do %>
    Edit
    <% end %>
    <%= link_to agencies_path, class: 'btn btn-secondary fatherButton' do %>
    Back
    <% end %>
</div>